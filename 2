#include <iostream>
#include<cmath>
using namespace std;
int Work(int*arr,int n){
int temp=0;
for(int i=0;i<n;++i){
if (arr[i]<0)
++temp;} 
return temp;}
int binary_search (int*arr, int size){
 int middle=(size-1)/2;
 int temp=0; 
 int i=0;
 for (;i!=size;++i){
 temp+=arr[i];}
 return temp/size;
 int key=temp;
 int start =0;
 int end=size-1;
 while(start<end){
 if (arr[middle]==key){
return arr[middle]; }
if (arr[middle]<key) {
end=middle-1;}
else {
start=middle+1;}
return -1;}}
int main() {
int array[5]{9,7,2,-5,3};

int array2[5]{9,-7,2,-5,3};
cout<<Work(array,5)<<endl;
cout<<Work(array2,5);
return 0;}
